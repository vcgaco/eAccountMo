@model eAccount.Models.ChartofAccount

@{
    ViewData["Title"] = "Edit Chart of Account";
}

<h2>Edit</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="AccountCode"></label>
        <input asp-for="AccountCode" class="form-control" />
        <span asp-validation-for="AccountCode" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AccountName"></label>
        <input asp-for="AccountName" class="form-control" />
        <span asp-validation-for="AccountName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AccountType"></label>
        <select asp-for="AccountType" class="form-control" asp-items="Html.GetEnumSelectList<eAccount.Models.AccountType>()" id="AccountType"></select>
    </div>

    <div class="form-group form-check">
        <input asp-for="HasSubsidiary" class="form-check-input" />
        <label asp-for="HasSubsidiary" class="form-check-label"></label>
    </div>

    <div class="form-group form-check">
        <input asp-for="Debit" class="form-check-input" />
        <label asp-for="Debit" class="form-check-label"></label>
    </div>

    <!-- Depreciation Section -->
    <div id="depreciationSection" style="display:none;">
        <div class="form-group">
            <label asp-for="DepreciationExpenseAccountId">Depreciation Expense Account</label>
            <select asp-for="DepreciationExpenseAccountId" class="form-control select2" asp-items="ViewBag.DepreciationAccounts">
                <option value="">-- Select Depreciation Expense --</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="AccumulatedDepreciationAccountId">Accumulated Depreciation Account</label>
            <select asp-for="AccumulatedDepreciationAccountId" class="form-control select2" asp-items="ViewBag.AccumulatedAccounts">
                <option value="">-- Select Accumulated Depreciation --</option>
            </select>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.select2').select2({ width: '100%', placeholder: "Select an account", allowClear: true });

            function toggleDepreciationSection() {
                var accountType = $('#AccountType').val();
                if (accountType == '3') { // FA=3, INTY=1
                    $('#depreciationSection').show();
                } else {
                    $('#depreciationSection').hide();
                    $('#DepreciationExpenseAccountId').val(null).trigger('change');
                    $('#AccumulatedDepreciationAccountId').val(null).trigger('change');
                }
            }

            // Run on page load
            toggleDepreciationSection();

            // Run on change
            $('#AccountType').change(toggleDepreciationSection);
        });
    </script>
}
