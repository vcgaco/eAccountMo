@model eAccount.Models.FixedAsset

@{
    ViewData["Title"] = "Add Fixed Asset";
}

<h3 class="mb-3">Add Fixed Asset</h3>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="SubsidiaryAccountId" />

    <!-- ================= BASIC INFORMATION ================= -->
    <div class="card mb-3">
        <div class="card-header fw-bold">
            Asset Information
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Asset Code</label>
                    <input asp-for="ChildCode" class="form-control" />
                </div>

                <div class="col-md-8">
                    <label class="form-label">Asset Name / Description</label>
                    <input asp-for="ChildName" class="form-control" />
                </div>
            </div>
        </div>
    </div>

    <!-- ================= IDENTIFICATION ================= -->
    <div class="card mb-3">
        <div class="card-header fw-bold">
            Identification Details
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Serial Number</label>
                    <input asp-for="SerialNumber" class="form-control" />
                </div>

                <div class="col-md-4">
                    <label class="form-label">Model</label>
                    <input asp-for="Model" class="form-control" />
                </div>

                <div class="col-md-4">
                    <label class="form-label">Property No.</label>
                    <input asp-for="PropertyNo" class="form-control" />
                </div>
            </div>
        </div>
    </div>

    <!-- ================= ACQUISITION ================= -->
    <div class="card mb-3">
        <div class="card-header fw-bold">
            Acquisition Details
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Acquisition Date</label>
                    <input asp-for="AcquisitionDate" type="date" class="form-control" />
                </div>

                <div class="col-md-4">
                    <label class="form-label">Useful Life (Years)</label>
                    <input asp-for="UsefulLife" type="number" class="form-control" />
                </div>

                <div class="col-md-4">
                    <label class="form-label">Amount</label>
                    <input asp-for="Amount" type="number" step="0.01" class="form-control" />
                </div>
            </div>
        </div>
    </div>

    <!-- ================= DEPRECIATION ================= -->
    <div class="card mb-3">
        <div class="card-header fw-bold">
            Depreciation Information
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Depreciation Effectivity</label>
                    <input asp-for="DepreciationEffectivity" type="date" class="form-control" />
                </div>

                <div class="col-md-4">
                    <label class="form-label">Annual Depreciation</label>
                    <input asp-for="AnnualDepreciation" type="number" step="0.01" class="form-control" />
                </div>

                <div class="col-md-4">
                    <label class="form-label">Monthly Depreciation</label>
                    <input asp-for="MonthlyDepreciation" type="number" step="0.01" class="form-control" />
                </div>

                <div class="col-md-4">
                    <label class="form-label">Scrap Value</label>
                    <input asp-for="ScrapValue" type="number" step="0.01" class="form-control" />
                </div>
            </div>
        </div>
    </div>

    <!-- ================= ACTIONS ================= -->
    <div class="d-flex justify-content-end gap-2">
        <a asp-controller="SubsidiaryAccounts" asp-action="Index" class="btn btn-secondary">
            Cancel
        </a>
        <button type="submit" class="btn btn-primary">
            Save Asset
        </button>
    </div>
</form>
