@model SubsidiaryAccount

<h3>Create Subsidiary Account</h3>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label>Parent Account</label>
        <select asp-for="AccountId" class="form-control" id="AccountId" required>
            <option value="">-- Select Account --</option>
            @foreach (var acc in ViewBag.Accounts)
            {
                <option value="@acc.Id">
                    @acc.AccountCode - @acc.AccountName
                </option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label>Subsidiary Code</label>
        <input asp-for="SubsidiaryCode" class="form-control" required />
    </div>

    <div class="mb-3">
        <label>Subsidiary Name</label>
        <input asp-for="SubsidiaryName" class="form-control" required />
    </div>
    <div class="form-group form-check mt-2">
        <label class="form-check-label">
            <input class="form-check-input" asp-for="HasChildSubsidiary" />
            Enable Child Subsidiary (Fixed Assets / Items)
        </label>
    </div>

    <button type="submit" class="btn btn-success">Save Subsidiary</button>
</form>
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<script>
    $(document).ready(function () {
        $("#AccountId").select2({
            width: '100%',
            placeholder: "-- Select Account --",
            allowClear: true
        });
    });
</script>
